{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "mergeConfidence:all-badges",
    "config:best-practices",
    "docker:enableMajor",
    "docker:pinDigests",
    "preview:dockerCompose",
    ":dependencyDashboard",
    ":semanticCommits"
  ],
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "suppressNotifications": [
    "prEditedNotification",
    "prIgnoreNotification"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/\\.container$/"
      ],
      "matchStrings": [
        "Image=(?<depName>.*?):(?<currentValue>.*?)\\s"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "description": [
        "Use custom versioning for linuxserver images"
      ],
      "versioning": "regex:^(?:(?P<compatibility>.+)-)?v?(?P<major>\\d+)\\.(?P<minor>\\d+)\\.(?P<patch>\\d+)(?:\\.(?P<build>\\d+))?-?r?(?P<ls>ls\\d+)?$",
      "matchPackageNames": [
        "/^ghcr.io\\/linuxserver\\//",
        "/^lscr.io\\/linuxserver\\//",
        "/^linuxserver\\//"
      ]
    }
  ]
}
